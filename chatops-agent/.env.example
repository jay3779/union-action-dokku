# Union Action API Configuration
# Base URL for the Union Action API that receives ethics escalations
UNION_ACTION_API_URL=http://localhost:8000

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment Configuration
# Environment name: dev, staging, production
ENVIRONMENT=dev

# Service Configuration
# Port the service listens on (default: 8080)
# PORT=8080

# Request timeout in seconds for Union Action API calls
# REQUEST_TIMEOUT=30

# Enable debug endpoint (only for development)
# DEBUG_ENDPOINT_ENABLED=false

# Log sampling rate (1.0 = log everything, 0.1 = log 10%)
# LOG_SAMPLE_RATE=1.0

# Sensitive data redaction in logs (true/false)
# REDACT_PHONE_NUMBERS=true

# Correlation ID header name
# CORRELATION_ID_HEADER=X-Correlation-ID

# Health check cache duration in seconds
# HEALTH_CHECK_CACHE_TTL=10

# Maximum message length limits
# MAX_NARRATIVE_LENGTH=2000
# MAX_MAXIM_LENGTH=500

# Retry configuration for Union Action API calls
# MAX_RETRIES=3
# RETRY_BACKOFF_FACTOR=2
# RETRY_MAX_DELAY=30

# Circuit breaker configuration
# CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
# CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Performance monitoring
# ENABLE_PERFORMANCE_TRACKING=true
# SLOW_REQUEST_THRESHOLD_MS=2000

# Memory profiling (development only)
# ENABLE_MEMORY_PROFILING=false
